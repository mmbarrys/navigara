{
  "name": "backend-node",
  "version": "1.0.0",
  "description": "API Gateway untuk NAVIGARA (dengan Conductor)",
  "main": "server.js",
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "scripts": {
    "start": "node server.js",
    "// --- SCRIPT UTAMA BARU (SINGLE COMMAND) --- //": "---",

    "dev:nix": "concurrently \"npm:start-react\" \"npm:start-node\" \"npm:start-python-nix\"",
    "dev:win": "concurrently \"npm:start-react\" \"npm:start-node\" \"npm:start-python-win\"",

    "// --- Helper Scripts --- //": "---",
    
    "start-react": "npm --prefix ../frontend run dev",
    "start-node": "node server.js",

    "// --- PERBAIKAN: Tambahkan --host=0.0.0.0 --- //": "---",

    "start-python-nix": "cd ../backend-python && ./venv/bin/python -m flask run --host=0.0.0.0 --port 5001",
    "start-python-win": "cd ../backend-python && .\\venv\\Scripts\\python.exe -m flask run --host=0.0.0.0 --port 5001"
  },
  "keywords": [],
  "author": "JangkarBesi",
  "license": "ISC"
}